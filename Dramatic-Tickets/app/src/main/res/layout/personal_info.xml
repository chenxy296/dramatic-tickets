<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_weight="1"
        android:background="#d8d8d8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personInfoCenter"
            android:text="个人中心"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/thickLine1"
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:background="@color/gray0"/>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/modifyPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/headPortrait"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/mine"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/modifyPersonInfo"
            app:layout_constraintTop_toTopOf="@+id/modifyPersonInfo"
            app:layout_constraintBottom_toBottomOf="@+id/modifyPersonInfo"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="登录/注册"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/modifyPersonInfo"
            app:layout_constraintLeft_toRightOf="@+id/headPortrait" />

        <TextView
            android:id="@+id/pensonalSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My mood"
            android:textSize="15sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@+id/headPortrait"
            app:layout_constraintTop_toBottomOf="@+id/userName"/>

        <ImageView
            android:id="@+id/toRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/toright"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/thickLine2"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="@color/gray0" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numOfCoupons"
            android:text="0张"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/verticalLine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/coupons"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coupons"
            android:text="优惠券"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numOfCoupons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/verticalLine"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:id="@+id/verticalLine"
            android:background="#d0d0d0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moneyNum"
            android:text="$ 0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/verticalLine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/moneyName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moneyName"
            android:text="账户余额"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/verticalLine"
            app:layout_constraintTop_toBottomOf="@+id/moneyNum"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/thickLine3"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="@color/gray0" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myOrders"
            android:text="我的订单"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/slimLine"
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:background="#e0e0e0"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/myOrders"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/personalOrderAll"
            android:src="@mipmap/quanbu"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/personalOrderUnpay"
            app:layout_constraintTop_toBottomOf="@+id/slimLine"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/personalOrderUnpay"
            android:src="@mipmap/daifukuan"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toRightOf="@+id/personalOrderAll"
            app:layout_constraintRight_toLeftOf="@+id/personalOrderUnseen"
            app:layout_constraintTop_toBottomOf="@+id/slimLine"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/personalOrderUnseen"
            android:src="@mipmap/weifangying"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toRightOf="@+id/personalOrderUnpay"
            app:layout_constraintRight_toLeftOf="@+id/personalOrderSeen"
            app:layout_constraintTop_toBottomOf="@+id/slimLine"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/personalOrderSeen"
            android:src="@mipmap/yifangying"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toRightOf="@+id/personalOrderUnseen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slimLine"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/thickLine4"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="@color/gray0" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:layout_weight="3">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/Favorite"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favoriteTitle"
                android:text="我的收藏"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/favoriteRight"
                android:src="@mipmap/youbian"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/slimLine5"
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:background="#e0e0e0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/Favorite"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/inComing"
            app:layout_constraintTop_toTopOf="@+id/slimLine5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inComingTitle"
                android:text="即将上映"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/inComingRight"
                android:src="@mipmap/youbian"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/slimLine6"
            android:layout_height="1dp"
            android:layout_width="0dp"
            android:background="#e0e0e0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/inComing"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/history"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/slimLine6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyTitle"
                android:text="观影历史"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/historyRight"
                android:src="@mipmap/youbian"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/thickLine5"
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:background="@color/gray0"
        android:layout_marginBottom="5dp" />



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="100dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/movie_chinese_name"
    android:text="头号玩家"
    android:textColor="@color/black"
    android:layout_margin="18dp"
    android:textSize="18sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:lines="1"
    android:ellipsize="end"/>
<!--
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/movie_chinese_name"
    app:layout_constraintBottom_toBottomOf="@id/movie_chinese_name"
    android:text="2张"
    android:textSize="18sp"
    android:layout_marginLeft="15dp"
    android:id="@+id/tickets_count"/>
    -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ticket_date"
    android:text="2018-4-30"
    android:textColor="@color/darkGray"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="10dp"
    android:textSize="14sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/movie_chinese_name"
    android:layout_marginStart="18dp" />

<TextView
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:id="@+id/ticket_time"
    android:layout_marginLeft="5dp"
    app:layout_constraintLeft_toRightOf="@+id/ticket_date"
    app:layout_constraintBottom_toBottomOf="@+id/ticket_date"
    android:text="12:40"
    android:textSize="14sp"/>

<TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/ticket_date"
    app:layout_constraintTop_toBottomOf="@id/ticket_date"
    android:text="太平洋影城"
    android:layout_marginTop="5dp"
    android:id="@+id/ticket_cinema"/>

<TextView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:background="@mipmap/youbian"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="10dp"
    android:layout_marginTop="35dp"
    android:id="@+id/ticket_detail_button"/>
</android.support.constraint.ConstraintLayout>